{
  "name": "meridiandb",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:temporal-queue\" ",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "dev:home": "npm run dev -w home",
    "dev:temporal-queue": "npm run dev -w temporal-queue",
    "watch": "concurrently \"npm run watch -w client\" \"npm run watch -w server\" \"npm run watch -w shared\" \"npm run watch -w meridiandb-sdk\"",
    "build": "npm run build -w @meridiandb/shared && npm run build -w client && npm run build -w server",
    "build:shared": "npm run build -w @meridiandb/shared",
    "deploy": "npm run deploy -w server",
    "server:migrations": "npm run -w server db:generate",
    "server:migrate:local": "npm run -w server db:migrate:local",
    "test:sdk": "npm run test -w meridiandb-sdk"
  },
  "devDependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.50.2",
    "concurrently": "^8.2.2",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@lottiefiles/dotlottie-react": "^0.17.6",
    "js-cookie": "^3.0.5"
  }
}
