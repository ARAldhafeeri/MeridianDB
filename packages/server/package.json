{
  "name": "server",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --experimental-vectorize-bind-to-prod",
    "build": "tsc --build",
    "deploy": "wrangler deploy",
    "watch": "tsc -b --watch",
    "db:up:local": "drizzle-kit up --config=./drizzle.config.json",
    "db:migrate:local": "drizzle-kit push --config=./drizzle.config.json",
    "db:generate": "drizzle-kit generate --config=./drizzle.config.json"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.3",
    "@meridiandb/shared": "*",
    "better-sqlite3": "^12.4.1",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.6",
    "jsonwebtoken": "^9.0.2",
    "sql-template-strings": "^2.2.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250917.0",
    "@types/jsonwebtoken": "^9.0.10",
    "drizzle-kit": "^0.31.4",
    "typescript": "~5.8.3"
  }
}
